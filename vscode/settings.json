{
    "workbench.colorTheme": "Solarized Dark",
    "workbench.tree.indent": 4,
    "window.zoomLevel": 1,

    // => Editor settings

        "editor.fontSize": 22,
        "editor.cursorBlinking": "solid",
        "editor.wordWrap": "on",
        "editor.wrappingIndent": "indent",
        "editor.lineNumbers": "relative",

    // => vim settings
        "vim.easymotionMarkerFontSize": "18",
        "vim.useSystemClipboard": true,
        "vim.incsearch": true,
        "vim.hlsearch": true,
        "vim.ignorecase": true,
        "vim.leader": ",",
        "vim.normalModeKeyBindingsNonRecursive": [
            {
                "before": ["<leader>", "<space>"],
                "commands": [":nohl"]
            },
            {
                "before": ["<leader>", "e"],
                "commands": [":tabe C:/Users/Matthew/AppData/Roaming/Code/User/settings.json"]
            },
            //allows for navigating wrapped lines in vim
            {
                "before": ["j"],
                "after": ["g", "j"]
            },
            {
                "before": ["k"],
                "after": ["g", "k"]
            }
        ],
        "vim.handleKeys": {
            "<C-a>": true,
            "<C-f>": true 
        }
}
